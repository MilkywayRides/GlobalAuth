<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_qr_code_large"
            android:tint="@color/foreground" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Verify Your Email"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/foreground" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="We sent a verification link to"
            android:textSize="16sp"
            android:textColor="@color/muted_foreground"
            android:gravity="center" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/foreground"
            android:gravity="center" />

        <!-- Instructions Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/input_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ Check your inbox"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/foreground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Click the verification link in the email to activate your account."
                android:textSize="14sp"
                android:textColor="@color/muted_foreground" />
        </LinearLayout>

        <!-- Check Status Button -->
        <Button
            android:id="@+id/btnCheckStatus"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Check Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_foreground"
            android:background="@drawable/button_primary" />

        <!-- Resend Button -->
        <Button
            android:id="@+id/btnResend"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Resend Email"
            android:textSize="16sp"
            android:textColor="@color/secondary_foreground"
            android:background="@drawable/button_secondary" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Logout"
            android:textSize="16sp"
            android:textColor="@color/destructive_foreground"
            android:background="@drawable/button_destructive" />

        <!-- Help Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Didn't receive the email? Check your spam folder or click resend."
            android:textSize="12sp"
            android:textColor="@color/muted_foreground"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
